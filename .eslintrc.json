{
  "extends": ["next", "prettier", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "packageManager": "yarn",
        "singleQuote": true,
        "semi": false,
        "spaceBeforeFunctionParen": false,
        "trailingComma": "es5",
        "useTabs": false
      }
    ]
  }
}
